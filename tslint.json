{
  "extends": ["tslint-react", "tslint-config-airbnb"],
  "rules": {
    "interface-name": false,
    "variable-name": false,
    "jsx-no-multiline-js": false,
    "import-name": false,
    "no-increment-decrement": false,
    "ter-arrow-parens": false,
    "semicolon": false,
    "jsx-no-lambda": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "jsx-boolean-value": [true, "never"],
    "jsx-no-string-ref": [false, { "noTemplateLiterals": true }],
    "align": [true, "parameters", "statements", "members", "elements"]
  }
}
